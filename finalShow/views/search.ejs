<%- include header %>
<!-- post part -->
<div class="g-bd">
    <div class="g-inner">
        <div class="search-tips">
            SEARCH： <span><%= query %></span>
        </div>
        <% posts.forEach(function (post, index) { %>
        <div class="m-index">
            <h2>
                <a href="article/<%= post._id %>"><%= post.title %></a>
            </h2>
            <p class="info">
                <%= post.name %> · <%= post.time.day %> · 分类：<a href="/articleList/<%= post.tag %>"><%= post.tac %></a>
            </p>
            <% if(post.post.length>160){%>
            <p class="pre"><%- post.post.substr(0,160) + '...' %></p>
            <%}else{%>
            <p class="pre"><%- post.post %></p>
            <%}%>
        </div>
        <% }) %>
    </div>
</div>
<%- include footer %>